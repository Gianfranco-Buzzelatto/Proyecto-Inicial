          <div class="card-body">
            <img
            src="/images/{{uid}}"
            class="card-img-top"
            alt="Imagen no disponible"
            style="object-fit: cover; object-position: center center;"
            width="150px" height="150px" 
          />
            <h5 class="card-title">{{nombre}}</h5>
            <p class="card-text">Precio: ${{precio}}. </p>
            <p class="card-text">Quedan {{stock}} disponibles</p>
            <p class="card-text"> <!--descripcion--> {{descripcion}}</p>
            <div class="btnCardMenu" style="justify-content:center">
              <a
                href="/menu/buy/{{id}}"
                class="btn btn-dark"
                style="background-color:#000; color:#efde2c; margin:7px"
              >Agregar al carrito <i class="fas fa-cart-plus"></i></a>
              <a
                href="/menu/single/{{id}}"
                class="btn btn-dark"
                style="background-color: #efde2c; color:#000; margin:7px"
              >Ver mas <i class="far fa-eye"></i></a>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
